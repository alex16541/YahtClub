<Page x:Class="YahtClub.AdminMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YahtClub"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="MainMenu" Background="White" Loaded="Page_Loaded">

    <Grid>
        <Button x:Name="btnUsers" Content="Users" HorizontalAlignment="Center" Margin="0,0,400,230" VerticalAlignment="Center" Width="353" Height="130"
                FontSize="20" Click="btnUsers_Click"/>
        <Button x:Name="btnProducts" Content="Products" HorizontalAlignment="Center" Margin="400,0,0,230" VerticalAlignment="Center" Width="353" Height="130"
                FontSize="20" Click="btnProducts_Click"/>
        <Button Content="Prices" HorizontalAlignment="Center" Margin="0,200,400,100" VerticalAlignment="Center" Width="353" Height="130"
                FontSize="20"/>
        <Button x:Name="btnExit" Content="Exit" HorizontalAlignment="Center" Margin="500,500,10,10" VerticalAlignment="Center" Width="246" Height="36" 
                FontSize="20" Click="btnExit_Click" />
        <Label Content="Admin menu" HorizontalAlignment="Center" Margin="0,41,0,521" VerticalAlignment="Center"
               FontSize="21"/>

    </Grid>
</Page>
